<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/parteArriba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/parteAbajo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/abreviatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="@android:integer/config_longAnimTime"
                android:hint="Abreviatura"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                />
            <EditText
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/abreviatura"
                android:layout_margin="10dp"
                android:hint="Ciudad"
                android:ems="@android:integer/config_longAnimTime"
                />
            <EditText
                android:id="@+id/comunidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nombre"
                android:layout_margin="10dp"
                android:hint="Comunidad"
                android:ems="@android:integer/config_longAnimTime"
                />
            <EditText
                android:id="@+id/pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comunidad"
                android:layout_margin="10dp"
                android:hint="Pais"
                android:ems="@android:integer/config_longAnimTime"
                />
            <EditText
                android:id="@+id/poblacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pais"
                android:layout_margin="10dp"
                android:hint="Poblacion"
                android:ems="@android:integer/config_longAnimTime"
                />
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/parteArriba"
        app:layout_anchorGravity="bottom|right|end"/>
    
</androidx.coordinatorlayout.widget.CoordinatorLayout>